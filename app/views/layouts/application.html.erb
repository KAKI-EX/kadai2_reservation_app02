<!DOCTYPE html>
<html>
  <head>
    <title>ReservationApp02</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>



    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <%= link_to image_tag("logo_transparent.png", class:"logo"),root_path  %>

  <% if user_signed_in? %>
    <header>
      <div><%= link_to "トップ", root_path, class: "text-white" %></div>
      <div><%= link_to "お部屋の貸し出し", posts_path, class: "text-white" %></div>
      <div><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-white" %></div>
      <div><%= link_to "予約一覧",home_path(current_user), class: "text-white" %></div>
    </header>
    <% else %>
    <header>
      <div><%= link_to "新規会員登録", new_user_registration_path, class: "text-white" %></div>
      <div><%= link_to "ログイン", new_user_session_path, class: "text-white" %></div>
    </header>
  <% end %>

  <body>
  <!--ransack用の記述-->
  <%= search_form_for @q, url: search_result_homes_path do |f| %>
    <%= f.search_field :room_address_prefecture_or_room_address_town_village_cont,placeholder: "エリア検索" %>
    <%= f.submit "検索" %>
    <%= f.search_field :room_name_or_room_info_cont,placeholder: "フリーワード検索" %>
    <%= f.submit "検索" %>
  <% end %>
  <!--ここまで-->


  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
