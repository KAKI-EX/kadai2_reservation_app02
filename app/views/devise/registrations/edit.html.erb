<div class= "devise_new_container">
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class = "devise_outer_line">
    <div class = "devise_new_sign_up">
      <h2>アカウント情報の編集</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

        <div class="devise_email">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="devise_password">
          <%= f.label :password %> <i>(変更しない場合は空欄のまま)</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> 文字以上が必要です</em>
          <% end %>
        </div>

        <div class="devise_confirmation_password">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="devise_user_avatar">
          <%= f.label :avatar %> <br />
          <%= f.file_field :avatar %>
        </div>

          <div class="devise_input_password">
          <%= f.label :current_password %><i>(変更を反映させる場合はパスワードを入力)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>

        <div class="devise_button">
          <%= f.submit "更新" %>
        </div>
      <% end %>

      <p class = devise_p>----------アカウントが必要ない方は以下を参照----------</p>
      <h3>アカウントを削除する</h3>

      <div class = devise_button2>
        <p class = devise_p>アカウント削除をご希望の際は下記をクリックください。</p>
        <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "アカウントを削除しますか？" }, method: :delete %>
      </div>

      <%= link_to "TOPページへ戻る",  homes_path%>
    </div>
  </div>
</div>
